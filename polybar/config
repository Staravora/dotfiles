[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = MEM %percentage_used%%

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
